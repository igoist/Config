[
  { "key": "ctrl+h",                "command": "cursorLeft",
                                     "when": "editorTextFocus && !editorReadonly" },
  { "key": "ctrl+j",                "command": "cursorDown",
                                     "when": "editorTextFocus && !editorReadonly" },
  { "key": "ctrl+k",                "command": "cursorUp",
                                     "when": "editorTextFocus && !editorReadonly" },
  { "key": "ctrl+l",                "command": "cursorRight",
                                     "when": "editorTextFocus && !editorReadonly" },
  { "key": "ctrl+e",                "command": "cursorPageUp",
                                     "when": "editorTextFocus && !editorReadonly" },
  { "key": "ctrl+y",                "command": "cursorPageDown",
                                     "when": "editorTextFocus && !editorReadonly" },
  { "key": "ctrl+s",                "command": "workbench.action.files.save" },
  { "key": "ctrl+[",                "command": "editor.foldRecursively",
                                     "when": "editorTextFocus" },
  { "key": "ctrl+]",                "command": "editor.unfold",
                                     "when": "editorTextFocus" },
  { "key": "ctrl+z",                "command": "editor.foldRecursively",
                                     "when": "editorTextFocus" },
  { "key": "ctrl+c",                "command": "editor.fold",
                                     "when": "editorTextFocus" },
  { "key": "ctrl+a",                "command": "editor.unfold",
                                     "when": "editorTextFocus" },
]
